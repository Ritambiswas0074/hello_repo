// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum BookingStatus {
  DRAFT
  PENDING_PAYMENT
  PAYMENT_APPROVED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum MediaType {
  IMAGE
  VIDEO
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings      Booking[]
  mediaGallery  Media[]
  schedules     Schedule[]
  refreshTokens RefreshToken[]

  @@index([email])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Location {
  id          String   @id @default(cuid())
  name        String
  city        String
  state       String?
  country     String
  address     String?
  latitude    Float?
  longitude   Float?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings  Booking[]
  schedules Schedule[]

  @@index([city])
  @@index([isActive])
}

model Schedule {
  id          String    @id @default(cuid())
  date        DateTime
  startTime   DateTime? // Only start time is required, end time is calculated (startTime + 1 hour)
  endTime     DateTime? // Optional - calculated from startTime + booking duration
  isAvailable Boolean   @default(true)
  locationId  String
  userId      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  location Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  user     User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  bookings Booking[]

  // Prevent double booking: unique constraint on location + date + start time
  @@unique([locationId, date, startTime])
  @@index([date])
  @@index([locationId])
  @@index([isAvailable])
  @@index([locationId, date])
}

model Media {
  id           String    @id @default(cuid())
  userId       String
  templateId   String?  // Template selected for this media
  featureType  String?  // Type of content: yourself, loved-ones, family, branding
  type         MediaType
  url          String
  cloudinaryId String
  thumbnailUrl String?
  filename     String
  mimeType     String
  size         Int // Size in bytes
  width        Int?
  height       Int?
  duration     Int? // For videos, duration in seconds
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  bookings Booking[]

  @@index([userId])
  @@index([type])
  @@index([templateId])
  @@index([featureType])
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  previewUrl  String?
  isActive    Boolean  @default(true)
  media       Media[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]

  @@index([isActive])
}

model Plan {
  id                   String   @id @default(cuid())
  name                 String
  description          String?
  price                Float
  duration             Int      // Duration in days
  displayDurationSeconds Int?   // Display duration in seconds (15, 30, or null for custom)
  features             Json?    // Array of features
  isActive             Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  bookings Booking[]

  @@index([isActive])
}

model Booking {
  id         String        @id @default(cuid())
  userId     String
  locationId String
  scheduleId String
  mediaId    String
  templateId String
  planId     String
  status     BookingStatus @default(DRAFT)
  notes      String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  media    Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  plan     Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  payment  Payment?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Payment {
  id              String        @id @default(cuid())
  bookingId       String        @unique
  stripePaymentId String?       @unique
  amount          Float
  currency        String        @default("usd")
  status          PaymentStatus @default(PENDING)
  paymentMethod   String?
  failureReason   String?
  paidAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([stripePaymentId])
}
